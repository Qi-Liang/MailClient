<UserControl x:Class="MailClient_beta_v1._1.Pages.ClassifiedMail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="310.153" d:DesignWidth="539.892">
    <Grid Style="{StaticResource ContentRoot}">

        <GridSplitter x:Name="gridSplitter1" Height="2" Margin="10,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85"/>
        <GridSplitter x:Name="gridSplitter" Width="2" Margin="100,0,0,10" HorizontalAlignment="Left"/>
        <Button x:Name="Add" Content="＋" HorizontalAlignment="Left" Height="16" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" BorderThickness="0,0,0,0" FontSize="8" Click="Add_Click" FontWeight="Bold"/>
        <TextBox x:Name="NewMailGroupName" HorizontalAlignment="Left" Height="20" Margin="10,36,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="85" Visibility="Hidden"/>
        <Button x:Name="AddNewMailGroup" Content="新建分组" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" VerticalAlignment="Top" Width="85" FontSize="10" Visibility="Hidden" Click="AddNewMailGroup_Click"/>
    </Grid>

</UserControl>
